<div class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header">
                <h4 class="modal-title"><%=__('contact-information') %></h4>
            </div>

            <div class="modal-body">
              <div class="form-group metadataform-group">
                  <label for="birthDate" class="data-label"><%= __('project') %></label>
                  <div class="data-input-div">
                      <span class="form-control" id="birthDate" name="birthDate" placeholder="<%= __('please-select') %>" ><%= project.name %></span>
                  </div>
              </div>
              <div class="form-group metadataform-group">
                  <label for="firstName" class="data-label"><%= __('given-name') %></label>
                  <div class="data-input-div">
                      <span class="form-control" id="firstName" placeholder="Name" name="firstName" ><%= owner.lastName %></span>
                  </div>
              </div>
              <div class="form-group metadataform-group">
                  <label for="lastName" class="data-label"><%= __('surname') %></label>
                  <div class="data-input-div">
                      <span class="form-control" id="lastName" placeholder="Surname" name="lastName" ><%= owner.firstName %></span>
                  </div>
              </div>
              <div class="form-group metadataform-group">
                  <label for="birthDate" class="data-label"><%= __('office') %></label>
                  <div class="data-input-div">
                      <span class="form-control" id="birthDate" name="birthDate" placeholder="<%= __('please-select') %>" ><%= address.office %></span>
                  </div>
              </div>
              <div class="form-group metadataform-group">
                  <label for="email" class="data-label"><%= __('email') %></label>
                  <div class="data-input-div">
                      <span name="email" type="email" class="form-control" id="email" placeholder="ex@example.com"><%= owner.email %></span>
                  </div>
              </div>
              <div class="form-group metadataform-group">
                  <label for="login" class="data-label"><%= __('phone') %></label>
                  <div class="data-input-div">
                      <span class="form-control" id="login" name="login" placeholder="Username" ><%= address.phone %></span>
                  </div>
              </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal"><%= __('close') %></button>
            </div>

        </div>
    </div>
</div>
