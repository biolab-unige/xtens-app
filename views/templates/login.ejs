<h2 id="account" class="legend">Account Login</h2>

<style type="text/css">
input {
    color: #555;
    line-height: 1.428571429;
    height: 34px;
    vertical-align: middle;
    background-color: #fff;
    border: 1px solid #ccc;
    border-radius: 4px;
    max-width: 280px;
    margin: 0;
    padding-left:10px;
}

#nav2 {
    display:none;
}

h2#account{
    font-size:20px;
    line-height: 30px;
    color: #555;
    font-family: 'Helvetica',Gadget, sans-serif;
    font-weight: normal;
}
.hidden-div {
    display: none;
}

</style>

<form name="login-form" id="login-form" class="form-horizontal login-form" role="form">
    <div id="loginFailed" class="form-group has-error hidden-div">
        <span class="control-label col-sm-4 col-sm-offset-2">
            <strong> <%= __("wrong-username-and-or-password!") %></strong>
        </span>
    </div>
    <div class="form-group">
        <label for="username" class="col-sm-2 control-label"><%= __('username') %></label>
        <div class "col-sm-4">
            <input name="user" type="text" id="username" class="form-control" placeholder="User Name" required>
        </div>
    </div>
    <div class="form-group">
        <label for="password" class="col-sm-2 control-label"><%= __('password') %></label>
        <div class "col-sm-4">
            <input type="password" id="password" class="form-control" placeholder="Password" required>
        </div>
    </div>

    <div class="col-sm-offset-4">
        <input type="submit" id="login" class="btn btn-primary" value="<%=__('sign-in') %>">
    </div>
</form>
<div class="project-modal"></div>
