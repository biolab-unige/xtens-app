<h2>Patient Graph</h2>
<style>
ellipse {
    fill: #fff;
    stroke: steelblue;
    stroke-width: 3px;
}

.node text { font: 12px sans-serif; }

.link {
    fill: none;
    stroke: #ccc;
    stroke-width: 2px;
}

.d3-tip {
  line-height: 1;
  font-weight: bold;
  padding: 12px;
  background: rgba(0, 0, 0, 0.8);
  color: #fff;
  border-radius: 2px;
  position:absolute;
  text-align:center;
  margin-left:20px;
 }


.d3-tip.n:after {
  margin: 0 0 0 0;
  top: 100%;
}

</style>
<div id="content">
  <label for="subject-selector" class="text-uppercase"><%= __("select-a-patient") %>:</label>
    <div class="row">
        <div class="col-md-4">
          <select id='subject-selector' class="form-group selectpicker" data-live-search="true" data-width="fit">
            <% if (idPatient) {%>
            <option selected value='<%= idPatient %>'>id - <%= idPatient %></option>
            <%} else {%>
            <% _.each(subjects, function(subject) {
              var label = subject.given_name && subject.surname ? subject.code + ": " + subject.surname + " " + subject.given_name : subject.code; %>
              <option value='<%= subject.id %>'><%= label %></option>
              <% }) %>
            <%}%>

            </select>
    </div>
    <div class="col-md-4">
        <a id="graph" class="btn btn-primary">Generate Graph</a>
    </div>
    </div>
</div>
