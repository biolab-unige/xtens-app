<h1><%= __("operator-manager") %></h1>
<h2><%=__("update-password")%></h2>
<div id="content">
  <form id="form" class="form-horizontal edit-password-form" data-parsley-trigger="focusout" data-parsley-validate role="form">

    <div class="form-group metadataform-group">
      <label for="oldPassword" class="data-label">
        <%= __('old-password') %>
      </label>
      <div class="data-input-div">
        <input required input type="password" class="form-control" id="oldPassword" placeholder="Old Password" data-parsley-minlength="8" name="oldPassword"></input>
      </div>
    </div>
    <div class="form-group metadataform-group">
      <label for="newPassword" class="data-label">
        <%= __('new-password-at-least') %>
      </label>
      <div class="data-input-div">
        <input required type="password" class="form-control" id="newPassword" name="password" data-parsley-minlength="8" placeholder="New Password"></input>
      </div>
    </div>
    <div class="form-group metadataform-group">
      <label for="confirmNewPass" class="data-label">
        <%= __('cnew-password') %>
      </label>
      <div class="data-input-div">
        <input required type="password" class="form-control" id="confirmNewPass" placeholder="Confirm Password" data-parsley-errors-container=".with-errors" data-parsley-equalto="#newPassword" data-parsley-error-message="Passwords don't match" placeholder="Confirm New Password">
        <div class="help-block with-errors"></div>
      </div>

      <div id="buttonbardiv" class="row text-center">
        <div class="btn-group btn-group-margin">
          <input type="submit" id="update" class="btn btn-primary" value="<%= __('update-password')%>">
        </div>
      </div>
  </form>
  </div>
  <div class="updated-password-modal"></div>
