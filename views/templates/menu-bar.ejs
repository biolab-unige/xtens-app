  <div class="col-md-4">
      <div class="col-md-5">
        <label id="label-project-selector" for="project-selector" class="text-uppercase"><%= __("active-project") %></label>
      </div>
      <div class="col-md-7">
        <%var projects = xtens.session.get("projects");
        if (projects.length > 1) { %>

          <div class="form-group">
            <select id='project-selector' class="form-control selectpicker" data-header="<i class='fa fa-exclamation-triangle'></i><%= __('warning-change-project') %>">
              <% if (xtens.session.get("isWheel")) {%>
                <option selected value='all'>All</option>
              <%}
            _.each(projects, function(project) {
                var name = project.name ? project.name : project.get("name");%>
                <option value='<%= name %>'><%= name %></option>
            <%}) %>
            </select>
        <%}
        else if(projects.length === 1){
          var name = projects[0].name ? projects[0].name : projects[0].get("name");%>
          <a class="btn btn-default"><%= name %></a>
        <%}%>
        </div>
      </div>
